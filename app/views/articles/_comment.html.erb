<div>
  <h4>Comment By: <%= comment.commenter %></h4>
  <p><%= comment.body %></p>
  <%= link_to 'Delete Comment', [comment.article, comment],
                                method: :delete,
                                data: {confirm: 'Are you sure?'} %> |
  <%= link_to 'Edit Comment', edit_article_comment_path(comment) %>
</div>
<p>Posted <%= distance_of_time_in_words(Time.now - comment.created_at) %> ago</p>