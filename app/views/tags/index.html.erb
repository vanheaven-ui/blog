<h1>List of Tags</h1>
<ul>
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
      <p class='tag-btn'><%= link_to 'Remove Tag', tag_path(tag),
                          method: :delete,
                          data: {confirm: 'Are you sure?'} %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'Go to Articles List', articles_path, class: 'new_article' %>